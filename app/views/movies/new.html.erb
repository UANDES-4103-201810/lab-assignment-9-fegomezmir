<h1>New Movie</h1>

<%= form_for @movie , url: {action: "create"} do |f| %>
<%= f.label ("Title") %>
<%= f.text_field ("title") %>
<%= f.label ("Description") %>
<%= f.text_field ("description") %>

<%= f.label ("duration") %>
<%= f.number_field ("duration")%>
  <%= f.label ("Release_date") %>
  <%= f.date_field "release_date" %>
  <%= f.label ("Director") %>
  <%= f.text_field ("Director") %>
  <%= f.label ("Address") %>
  <%= f.text_field ("Address") %>


<%= f.submit "submit" %>
<% end%>

<%= link_to 'Back', movies_path %>
