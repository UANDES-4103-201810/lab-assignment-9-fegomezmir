
<%= form_tag ("person/new") do %>

  <%= label_tag ("first_name") %>
  <%= text_field_tag ("first_name") %>
  <%= label_tag ("last_name") %>
  <%= text_field_tag ("last_name") %>
  <%= label_tag ("birth_date") %>
  <%= date_select :birth_date, id: :actor_birth_date %>
  <%= label_tag ("description") %>
  <%= text_field_tag ("description")%>
  <%= label_tag ("Actor") %>
  <%= radio_button_tag(:actor_button, "Actor") %>
  <%= label_tag ("Director") %>
  <%= radio_button_tag(:director_button, "Director")%>

  <%= submit_tag "submit" %>

<% end %>