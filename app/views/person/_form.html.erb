
<%= form_tag ("person/new") do %>

  <%= label_tag ("First_name") %>
  <%= text_field_tag ("First_name") %>
  <%= label_tag ("Last_name") %>
  <%= text_field_tag ("Last_name") %>
  <%= label_tag ("Birth_date") %>
  <%= date_select :birth_date, id: :actor_birth_date %>
  <%= label_tag ("Description") %>
  <%= text_field_tag ("Description")%>
  <%= label_tag ("Actor") %>
  <%= radio_button_tag(:actor_button, "Actor") %>
  <%= label_tag ("Director") %>
  <%= radio_button_tag(:director_button, "Director")%>

  <%= submit_tag "submit" %>

<% end %>